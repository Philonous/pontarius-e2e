name:                pontarius-xmpp-e2e
version:             0.1.0.0
synopsis:            End-to-end security for Pontarius XMPP
description:         This Pontarius XMPP plugin adds end-to-end security
                     capabilities to XMPP sessions.
homepage:            https://github.com/pontarius/pontarius-xmpp-e2e
Bug-Reports:         https://github.com/pontarius/pontarius-xmpp-e2e/issues
license:             Apache-2.0
license-file:        LICENSE.md
copyright:           Philipp Balzarek, Jon Kristensen
author:              Philipp Balzarek
maintainer:          p.balzarek@googlemail.com
category:            Network
build-type:          Simple
cabal-version:       >=1.8

library
  hs-source-dirs:      source
  exposed-modules:     Network.Xmpp.E2E
  other-modules:       Pontarius.E2E
                     , Pontarius.E2E.Monad
                     , Pontarius.E2E.Serialize
                     , Pontarius.E2E.Helpers
                     , Pontarius.E2E.AKE
                     , Pontarius.E2E.Types
                     , Pontarius.E2E.Message
                     , Pontarius.E2E.Session
                     , Pontarius.E2E.SMP
  build-depends:       aeson
                     , base
                     , base64-bytestring
                     , byteable
                     , bytestring
                     , cereal
                     , cipher-aes
                     , conduit
                     , containers
                     , crypto-numbers
                     , crypto-pubkey
                     , crypto-random
                     , cryptohash
                     , data-default
                     , either
                     , exceptions >= 0.6
                     , free
                     , monadcryptorandom
                     , mtl
                     , pontarius-xmpp
                     , random
                     , stm
                     , transformers
                     , xml-conduit
                     , xml-picklers >= 0.3.4
                     , xml-types
--                     , cryptocipher
-- helpers; remove before release
                     , pem
                     , x509
                     , text
                     , crypto-pubkey-types
                     , asn1-types
                     , asn1-encoding >= 0.8.1.1
                     , data-default
                     , network
                     , stm
                     , hslogger
                     , lens

  ghc-options: -Wall -fno-warn-orphans
